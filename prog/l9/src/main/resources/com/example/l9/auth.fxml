<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450" prefWidth="800" style="-fx-background-color: #8efaa8;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.l9.client.controllers.AuthController">
    <ComboBox fx:id="languageComboBox" layoutX="10" layoutY="10" prefWidth="100"/>
    <Label fx:id="titleLabel" alignment="CENTER" layoutX="200" layoutY="120" prefWidth="400" prefHeight="30"
           textAlignment="CENTER" style="-fx-font: 24 'Roboto'" />
    <TextField fx:id="loginField" alignment="CENTER" layoutX="200" layoutY="160" prefWidth="400" prefHeight="30"
               style="-fx-font: 16 'Roboto'" />
    <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="200" layoutY="200" prefHeight="30"
                   prefWidth="400" style="-fx-font: 16 'Roboto'" />
    <Button fx:id="loginButton" layoutX="200" layoutY="240" mnemonicParsing="false" onAction="#login" prefHeight="30"
            prefWidth="195" style="-fx-border-color: #c0c0c0;"
            text="Войти">
    </Button>
    <Button fx:id="registerButton" layoutX="405" layoutY="240" mnemonicParsing="false" onAction="#register" prefHeight="30"
            prefWidth="195" style="-fx-border-color: #c0c0c0;"
            text="Зарегистрироваться">
    </Button>
    <Label fx:id="errorLabel" alignment="CENTER" layoutX="200" layoutY="290" prefWidth="400" prefHeight="30"
           textAlignment="CENTER" style="-fx-text-fill: #ff0000; -fx-font: 14 'Roboto'" />
</AnchorPane>
